# Email Service Configuration
# Choose email provider: 'sendgrid' or 'aws-ses'
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES Configuration (if using AWS SES)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Email Settings
FROM_EMAIL=noreply@yourjobportal.com
TEST_EMAIL=test@yourjobportal.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Support and Help URLs
SUPPORT_URL=http://localhost:3000/support
HELP_URL=http://localhost:3000/help

# Email Rate Limits
EMAIL_RATE_LIMIT_PER_MINUTE=100
EMAIL_BATCH_SIZE=10

# SendGrid Template IDs (if using dynamic templates)
SENDGRID_WELCOME_TEMPLATE_ID=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_JOB_ALERT_TEMPLATE_ID=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email Queue Settings
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=300000